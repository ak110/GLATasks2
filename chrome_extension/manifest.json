{
  "manifest_version": 3,
  "name": "Save To GLATasks",
  "version": "1.0.0",
  "description": "Save current page to GLATasks with a single click",
  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save To GLATasks",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
