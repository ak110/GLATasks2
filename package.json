{
  "type": "module",
  "scripts": {
    "format": "prettier --write *.json app/templates/*.html && xo --fix *.ts appjs",
    "lint": "xo *.ts appjs",
    "test": "tsc && jest",
    "build": "vite build",
    "build:watch": "vite build --watch",
    "dev": "vite"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@tailwindcss/vite": "^4.1.7",
    "alpinejs": "^3.14.9",
    "bootstrap": "^5.3.6",
    "tailwindcss": "^4.1.7",
    "uint8array-extras": "^1.4.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/alpinejs": "^3.13.11",
    "@types/bootstrap": "^5.2.10",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.18",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fail-on-console": "^3.3.1",
    "prettier": "^3.5.3",
    "prettier-plugin-jinja-template": "^2.1.0",
    "ts-jest": "^29.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "xo": "^0.60.0"
  },
  "xo": {
    "prettier": true,
    "envs": [
      "browser"
    ],
    "ignores": [
      "./.cache/**",
      "./.local/**",
      "./.pnpm-store/**",
      "./.venv/**",
      "./app/static/**",
      "./app/template/**",
      "./data/**",
      "./dist/**",
      "./node_modules/**"
    ],
    "space": 2,
    "semicolon": false,
    "rules": {
      "@typescript-eslint/naming-convention": "off",
      "@stylistic/quotes": "off",
      "camelcase": "off",
      "import/no-cycle": "off",
      "no-alert": "off",
      "max-depth": [
        "warn",
        6
      ],
      "max-params": [
        "warn",
        5
      ]
    }
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-jinja-template"
    ],
    "semi": false,
    "useTabs": false,
    "tabWidth": 2,
    "trailingComma": "all",
    "printWidth": 127,
    "singleQuote": false,
    "bracketSpacing": true,
    "overrides": [
      {
        "files": [
          "*.html"
        ],
        "options": {
          "parser": "jinja-template"
        }
      }
    ]
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
