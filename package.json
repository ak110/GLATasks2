{
  "name": "glatasks",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write *.ts *.json src/* templates/* && xo --fix *.ts src/* templates/*",
    "test": "tsc && jest",
    "build": "vite build",
    "build:watch": "vite build --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39",
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/alpinejs": "^3.13.11",
    "@types/bootstrap": "^5.2.10",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.14",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.3",
    "prettier-plugin-jinja-template": "^2.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "xo": "^0.60.0"
  },
  "xo": {
    "prettier": true,
    "envs": [
      "browser"
    ],
    "ignores": [
      "./.cache/**",
      "./.local/**",
      "./.venv/**",
      "./data/**",
      "./dist/**",
      "./node_modules/**"
    ],
    "space": 2,
    "semicolon": false,
    "rules": {
      "@stylistic/quotes": "off",
      "camelcase": "off",
      "no-alert": "off",
      "max-depth": [
        "warn",
        6
      ],
      "max-params": [
        "warn",
        5
      ]
    }
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-jinja-template"
    ],
    "semi": false,
    "useTabs": false,
    "tabWidth": 2,
    "trailingComma": "all",
    "printWidth": 127,
    "singleQuote": false,
    "bracketSpacing": true,
    "overrides": [
      {
        "files": [
          "*.html"
        ],
        "options": {
          "parser": "jinja-template"
        }
      }
    ]
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "alpinejs": "^3.14.9",
    "bootstrap": "^5.3.6",
    "crypto-js": "^4.2.0"
  }
}
